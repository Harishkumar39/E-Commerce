{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/react"
    },
    {
      "src": "server/index.js",  // or the entry file for your server
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"  // Redirect requests to the React app
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/$1"  // Handle API routes with the server
    }
  ]
}

